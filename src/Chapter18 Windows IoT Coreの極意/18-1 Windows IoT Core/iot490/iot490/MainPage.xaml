<Page
    x:Class="iot490.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:iot490"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock 
    		FontSize="60"
    		x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" 
    		Text="brush motor sample" 
    		VerticalAlignment="Top" Margin="10,10,0,0"/>
        <Button 
            FontSize="50"
            x:Name="buttonForword" Content="前進" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,114,0,0" Height="123" Width="163"/>
        <Button 
            FontSize="50"
            x:Name="buttonBack" Content="後退" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="204,114,0,0" Height="123" Width="163"/>
        <Button 
        	FontSize="50"
        	x:Name="buttonStop" Content="停止" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="401,114,0,0" Height="123" Width="163"/>

    </Grid>
</Page>
