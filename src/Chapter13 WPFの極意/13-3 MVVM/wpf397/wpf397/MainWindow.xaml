<Window x:Class="wpf397.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf397"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ListBox 
            ItemsSource="{Binding Items}"
            SelectedValue="{Binding SelectText}"
            HorizontalAlignment="Left" Height="186" Margin="10,10,0,0" VerticalAlignment="Top" Width="176"/>
        <TextBlock HorizontalAlignment="Left" Margin="191,10,0,0" TextWrapping="Wrap" Text="選択項目：" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="191,31,0,0" TextWrapping="Wrap" 
                   Text="{Binding SelectText}" VerticalAlignment="Top" Width="181"/>

    </Grid>
</Window>
