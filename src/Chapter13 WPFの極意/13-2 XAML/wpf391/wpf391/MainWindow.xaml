<Window x:Class="wpf391.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf391"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Canvas>
        <Rectangle 
        x:Name="rect"
        Fill="Red" Height="100" Stroke="Black" Width="100" 
    	Canvas.Left="10" Canvas.Top="10"/>
        <Button Content="右へ移動" Canvas.Left="432" Canvas.Top="10" Width="75" Height="40" Click="button1_Click"/>
        <Button Content="下へ移動" Canvas.Left="432" Canvas.Top="55" Width="75" Height="40" Click="button2_Click"/>
        <Button Content="最初の位置へ" Canvas.Left="432" Canvas.Top="100" Width="75" Height="40" Click="button3_Click"/>
    </Canvas>
</Window>
