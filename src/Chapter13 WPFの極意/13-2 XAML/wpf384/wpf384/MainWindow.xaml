<Window x:Class="wpf384.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf384"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="開く" Margin="4" />
        <Button Content="追加" Margin="4" Grid.Column="1" />
        <Button Content="更新" Margin="4" Grid.Column="2" />
        <Button Content="削除" Margin="4" Grid.Column="3" />
        <Button Content="ヘルプ" Margin="4" Grid.Column="4" 
                HorizontalAlignment="Right" Width="73" />
        <Rectangle Grid.ColumnSpan="5" Fill="LightGray" 
                   Margin="10" 
                   Grid.Row="1" Stroke="Black" />
    </Grid>
</Window>
